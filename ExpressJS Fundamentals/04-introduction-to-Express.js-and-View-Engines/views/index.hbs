<h1>Browser</h1>
<form action="/search" method="POST">
  <input type="text" class="search" name="search" placeholder="Search...">
  <input type="number" name="from" class="difficulty" placeholder="Difficulty from...">
  <span>-</span>
  <input type="number" name="to" class="difficulty" placeholder="Difficulty to...">
  <input type="submit" value="search">
</form>
{{#each cubes}}
<div class="cube">
  <img class="cube" src="{{image}}">
  <p class="name">{{name}}</p>
  <p><span>Difficulty level:</span> {{difficulty}}</p>
  <a href="/details/{{_id}}" class="button">Details</a>
</div>
{{/each}}