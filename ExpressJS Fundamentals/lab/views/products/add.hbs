<script type="application/javascript" src="/js/formFieldsValidation.js"></script>
<form class="form center-form" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" name="name" type="text" class="input-field" message="Name is required!" required />
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description" type="text" class="input-field"  message="Description is required!" required></textarea>
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input id="price" name="price" type="number" step="0.01" class="input-field"  message="Price is required!" required />
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input id="image" name="image" type="file" class="input-field" accept="image/*"  message="Image cannot be empty!" required />
  </div>
  <div class="form-group">
    <label for="group">Group</label>
    <select name="category" id="group" class="input-field"  message="Category is required!" required>
      {{#each categories}}
      <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <input class="btn form-btn" type="submit" class="btn" value="Add">
  </div>
</form>