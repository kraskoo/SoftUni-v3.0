<h1>Chatroom with {{users.1.username}}</h1>
{{#if isBlocked}}
<form method="POST" class="chat-form" action="/unblock/{{users.1.username}}">
  <button class="btn btn-success">Unblock</button>
</form>
{{else}}
<form method="POST" class="chat-form" action="/block/{{users.1.username}}">
  <button class="btn btn-danger">Block</button>
</form>
{{/if}}
<div class="chat-wrapper">
  <div id="message-wrapper">
    {{#each messages}}
    <div class="message-row">
      {{#if this.isImage}}
      <img class="thread-message {{this.side}}" src="{{this.content}}">
      {{else}}
      <span class="thread-message {{this.side}}">{{this.content}}</span>
      {{/if}}
    </div>
    {{/each}}
  </div>
  {{#if isBlockedFromOtherUser}}
  <form method="post" class="chat-form">
    <textarea rows="5" name="message" placeholder="You've been blocked from the other the user and you cannot send message!" disabled></textarea>
    <input value="{{id}}" name="threadId" hidden />
    <button class="btn btn-primary send">Send</button>
  </form>
  {{else}}
  <form method="post" class="chat-form">
    <textarea rows="5" name="message" placeholder="message"></textarea>
    <input value="{{id}}" name="threadId" hidden />
    <button class="btn btn-primary send">Send</button>
  </form>
  {{/if}}
</div>